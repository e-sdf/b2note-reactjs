{
  "name": "b2note-widget",
  "version": "3.0.0",
  "description": "B2Note widget app",
  "private": "true",
  "scripts": {
    "watch": "rm -rf dist/*; webpack  --watch --progress --config webpack.dev.js",
    "build": "rm -rf dist/*; webpack --progress --config webpack.prod.js",
    "dev-server": "webpack-dev-server --open --config webpack.dev.js",
    "start": "cd server; node -r dotenv/config server",
    "test": "jest",
    "clean": "npm cache clean --force",
    "docker-build": "docker-compose build; docker image prune -f",
    "docker-tag": "docker tag b2note/b2note-widget b2note/b2note-widget:3.0-beta2.4",
    "docker-push": "docker push b2note/b2note-widget",
    "docker-deploy": "npm run docker-build && npm run docker-tag && npm run docker-push",
    "docker-run": "docker-compose up --build"
  },
  "devDependencies": {
    "@babakness/exhaustive-type-checking": "^0.1.3",
    "@types/jest": "^25.1.5",
    "@types/jquery": "^3.3.34",
    "@types/lodash": "^4.14.149",
    "@types/pegjs": "^0.10.1",
    "@types/promise.allsettled": "^1.0.3",
    "@types/react": "^16.9.32",
    "@types/react-bootstrap-typeahead": "^3.4.5",
    "@types/react-dom": "^16.9.6",
    "@types/uuid": "^7.0.2",
    "axios": "^0.19.2",
    "bootstrap": "^4.4.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "es6-promise": "^4.2.8",
    "eslint-plugin-react-hooks": "^3.0.0",
    "jest": "^25.2.7",
    "jquery": "^3.4.1",
    "js-file-download": "^0.4.11",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.9.0",
    "normalize.css": "^8.0.1",
    "pegjs": "^0.10.0",
    "promise.allsettled": "^1.0.2",
    "react": "^16.13.1",
    "react-bootstrap-typeahead": "^4.1.0",
    "react-dom": "^16.13.1",
    "react-icons": "^3.9.0",
    "react-popper": "^2.0.0",
    "react-transition-group": "^4.3.0",
    "ts-enum-util": "^4.0.1",
    "ts-jest": "^25.3.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "uuid": "^7.0.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "xmlbuilder": "^15.1.0"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  }
}
