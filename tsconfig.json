{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "b2note-core/src/*",
        "b2note-client-lib/src/*"
      ]
    },
    "rootDirs": [
      "app",
      "b2note-core/src",
      "b2note-client-lib/src"
    ],
    "target": "es5",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react"
  },
  "include": ["app/**/*", "b2note-core/src/**/*", "b2note-client-lib/src/**/*"],
  "exclude": ["node_modules"]
}
