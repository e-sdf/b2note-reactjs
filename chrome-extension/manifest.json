{
  "name": "B2NOTE Widget",
  "description" : "B2NOTE annotation service widget",
  "version": "0.1",
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": { "persistent": false, "scripts": ["background.js"] },
  "browser_action": {
    "default_popup": "widget.html",
    "default_title": "B2NOTE",
    "default_icon": "icon.png"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "Opens B2NOTE widget"
    }
  },
  "icons": {
    "16": "icon-16x16.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
